<div id="logindiv">
  <div class="row">
    <div class="span6 offset1">
      <h1> Login </h1><br>
      <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
